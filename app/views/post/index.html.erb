<body>
  <header>
    <h1>EVERYWHEEL<span>2019</span></h1>
    <div class="nav">
      <a class="inquiry" href=#>問い合わせ</a>
      <% if user_signed_in? %>  
      <a class="inquiry2" href= '/users/sign_out'>ログアウト</a>
      <%= link_to 'URL指定変更', new_post_path,class: "inquiry2" %>
      <% else %>
      <a class="inquiry2" href= '/users/sign_in'>管理者用ページ</a>
      <%end%> 
    </div>
  </header>

<div class = contents>
  <h2>TODAY SCHEDULE</h2>

  <div class = "livehouses">
    <div class = "livehouse_names">
      <div class = "house1"><a class="drop" href="https://clubdrop.jp/">DROP</a></div>
      <div class = "house2"><a class="beyond" href="https://beyond-osaka.jp/">BEYOND</a></div>
      <div class = "house3"><a class="varon" href="https://osaka-varon.jp/">VARON</a></div>
    </div>
    
  <div class= 'events'>
    <div class= "event1">
      <div class= "event1_title">
          <div class = "event1_title_name"><%= @event_name %></div>
      </div>
      <ul div class="drop_bands">
        <% @title_drop.each do |value| %>
          <li><%= value %></li>
        <% end %>
      </ul>
      <div class = "flyer">
      <%= image_tag @image_drop, :alt => '' %>
      </div>
      <div class= "event1_price">
        <p> OP/ST <%= @opst_drop %></p>
        <p><%= @price_drop %></p>
      </div>
    </div>
    
    <div class= "event2">
      <div class= "event2_title">
        <div class = "event1_title_name"><%= @event_name_beyond %></div>
      </div>
      <ul div class="byond_bands">
        <% @title_beyond.each do |value| %>
          <li><%= value %></li>
        <% end %>
      </ul>
      <div class = "flyer">
     <%= image_tag @image_beyond, :alt => '' %>
      </div>
      <div class= "event2_price">
        <p>OP/ST <%= @opst_beyond %></p>
        <p><%= @price_beyond %></p>
      </div>
    </div>

    <div class= "event3">
      <div class= "event3_title">
        <div class = "event1_title_name"><%= @event_name_varon %></div>
      </div>
      <ul div class="varon_bands">
        <% @title_varon.each do |value| %>
          <li><%= value %></li>
        <% end %>
      </ul>
      <div class = "flyer">
     <%= image_tag @image_varon, :alt => '' %>
      </div>
      <div class= "event3_price">
        <p>OP/ST<%= @opst_varon %></p>
        <p><%= @price_varon %></p>
      </div>
    </div>
  </div>
<div>
  <footer>
    <div class="footer_content">
      <p class="footer_copy">Copyright(C) everywheel. All Rights Researved.</p>
    </div>
  </footer>
</body>